function szamitas() {
    let score = document.getElementById("number").value;

        if (score >= 90 && score <= 100) {
            return document.getElementById("eredmeny").innerHTML = "<br>A kapott jegy: A";
        } else if (score >= 80 && score < 90) {
            return document.getElementById("eredmeny").innerHTML = "<br>A kapott jegy: B";
        } else if (score >= 70 && score < 80) {
            return document.getElementById("eredmeny").innerHTML = "<br>A kapott jegy: C";
        } else if (score >= 60 && score < 70) {
            return document.getElementById("eredmeny").innerHTML = "<br>A kapott jegy: D";
        } else if (score >= 0 && score < 60) {
            return document.getElementById("eredmeny").innerHTML = "<br>A kapott jegy: F";
        } else {
            return document.getElementById("eredmeny").innerHTML = "<br>Nem értékelhető";
        }
}
